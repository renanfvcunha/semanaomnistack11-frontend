{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "plugin:prettierx/default",
    "plugin:react/recommended",
    "airbnb"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "prettierx",
    "react",
    "react-hooks"
  ],
  "rules": {
    "react/jsx-filename-extension": "off",
    "arrow-parens": "off",
    "no-alert": "off",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "prettierx/options": ["error", {
      "singleQuote": true,
      "trailingComma": "all"
    }]
  }
}
