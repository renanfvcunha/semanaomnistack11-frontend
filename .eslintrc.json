{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "plugin:prettierx/default",
    "plugin:react/recommended",
    "airbnb"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "prettierx",
    "react"
  ],
  "rules": {
    "react/jsx-filename-extension": "off",
    "prettierx/options": ["error", {
      "singleQuote": true
    }]
  }
}
